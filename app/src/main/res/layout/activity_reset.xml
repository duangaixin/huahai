<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f5f8f8"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_box"
        style="@style/top_box"
        android:background="#349aed">

        <ImageView
            android:id="@+id/back"
            style="@style/top_box_back"/>

        <TextView
            style="@style/top_box_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >


        <TextView
            android:id="@+id/txt_pwd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="设置密码"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_common_16sp"/>

        <EditText
            android:id="@+id/et_pwd_reset"
            style="@style/common_form_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/txt_pwd"
            android:hint="6-20位字母数字组合"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_common_16sp"/>


    </RelativeLayout>

    <View
        style="@style/horizontal_divider_module"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/txt_pwd_confirm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="确认密码"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_common_16sp"/>

        <EditText
            android:id="@+id/et_pwd_reset_confirm"
            style="@style/common_form_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/txt_pwd_confirm"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="@dimen/text_size_common_16sp"/>


    </RelativeLayout>

    <com.nk.framework.view.AlphaButton2

        android:id="@+id/btn_reset_confirm"
        style="@style/common_btn_red_long"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="50dp"
        android:background="#349aed"
        android:text="确认修改"/>

</LinearLayout>
