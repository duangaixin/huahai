<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <com.nk.framework.view.MyViewPager
        android:id="@+id/sigle_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_box" />
 
    <com.nk.framework.view.CirclePageIndicator
        android:id="@+id/sigle_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sigle_pager"
        android:padding="@dimen/margin_edge"
        app:fillColor="@color/white"
        app:pageColor="@color/transparent"
        app:radius="5dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/white" />

</RelativeLayout>