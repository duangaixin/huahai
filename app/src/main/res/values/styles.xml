<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- 通用背景颜色 -->
        <item name="android:windowBackground">@color/gray_f4f4f4</item>

    </style>
    <style name="launch" parent="AppBaseTheme">
        <!-- 通用背景颜色 -->
        <item name="android:windowBackground">@mipmap/launch_image_3x</item>
    </style>



    <style name="top_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/top_box_height</item>
        <item name="android:background">#349aed</item>
    </style>

    <style name="top_box_title">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxWidth">240dp</item>
        <item name="android:ellipsize">marquee</item>

        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!--<item name="android:background">@drawable/back_bg</item>-->
    <style name="top_box_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/icon_back</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="common_form_label">
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:textSize">@dimen/text_size_common_15sp</item>
    </style>


    <style name="common_form_editText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black_555555</item>
        <item name="android:textColorHint">@color/gray_999999</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
        <item name="android:textSize">@dimen/text_size_common_15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 水平模块分割线 -->
    <style name="horizontal_divider_module">
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_d7d7d7</item>
    </style>
    <!-- 内容间分割线 -->
    <style name="horizontal_divider_content">
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_eeeeee</item>
    </style>
    <!-- 竖直模块分割线 -->
    <style name="vertical_divider_module">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:background">@color/gray_d7d7d7</item>
    </style>

    <!-- 竖直内容分割线 -->
    <style name="vertical_divider_content">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:background">@color/gray_eeeeee</item>
    </style>

    <!-- 红色实心按钮 -->
    <style name="common_btn_red">
        <item name="android:textColor">@color/common_btn_solid_text_color</item>
        <item name="android:textSize">@dimen/text_size_emphasize_17sp</item>
        <item name="android:background">@drawable/common_btn_red_bg</item>
        <item name="android:layout_width">@dimen/common_btn_width</item>
        <item name="android:layout_height">@dimen/common_btn_height</item>
    </style>
    <!-- 红色实心长按钮 -->
    <style name="common_btn_red_long">
        <item name="android:textColor">@color/common_btn_solid_text_color</item>
        <item name="android:textSize">@dimen/text_size_title_20sp</item>
        <item name="android:background">@drawable/common_btn_red_long_bg</item>
        <item name="android:layout_height">@dimen/common_btn_long_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_edge</item>
        <item name="android:layout_marginRight">@dimen/margin_edge</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>